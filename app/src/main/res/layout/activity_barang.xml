<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.BarangActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableStart="@drawable/ic_arrow_back"
              android:drawableLeft="@drawable/ic_arrow_back"
              android:layout_margin="10dp"
              android:id="@+id/arrow"
              android:onClick="back"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/arrow"
              android:id="@+id/tv_title"
              android:text="Beli Barang"
              android:layout_marginLeft="20sp"
              android:layout_marginTop="6dp"
              android:textSize="20sp"
              android:textColor="@android:color/black"
    />
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginTop="10dp"
          android:id="@+id/divider"
          android:layout_below="@id/tv_title"
          android:background="#ecf0f1"
    />


        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barang1"
                android:layout_below="@id/divider"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16sp"
                app:cardCornerRadius="8dp"
        >
            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/lpg_bright"
                    android:id="@+id/iv_barang"

            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_nama_barang"
                    android:layout_below="@id/iv_barang"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="16sp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="Bright 3kg"

            />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#ff3131"
                          android:id="@+id/tv_harga"
                          android:layout_below="@id/tv_nama_barang"
                          android:textSize="16sp"
                          android:text="Rp 39.000"
                          android:layout_marginLeft="16sp"
                />
                <TextView android:id="@+id/tv_toko"
                          android:layout_below="@id/tv_harga"
                          android:layout_marginTop="5dp"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:text="Pertashop "
                          android:layout_marginLeft="10sp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@android:color/black"
                          android:id="@+id/tv_rate"
                          android:layout_marginLeft="10dp"
                          android:layout_marginTop="5dp"
                          android:layout_toRightOf="@id/tv_toko"
                          android:layout_below="@id/tv_harga"
                          android:drawableStart="@drawable/icon_start"
                          android:drawableLeft="@drawable/icon_start"
                          android:text="4.7"
                          android:layout_marginBottom="20sp"
                />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barang2"
            android:layout_below="@id/divider"
            android:layout_toRightOf="@id/barang1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="28sp"
            app:cardCornerRadius="8dp"
    >
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/pertamax"
                    android:id="@+id/iv_barang2"

            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_nama_barang2"
                    android:layout_below="@id/iv_barang2"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="16sp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="Pertamax 5lt"

            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#ff3131"
                      android:id="@+id/tv_harga2"
                      android:layout_below="@id/tv_nama_barang2"
                      android:textSize="16sp"
                      android:text="Rp 39.000"
                      android:layout_marginLeft="16sp"
            />
            <TextView android:id="@+id/tv_toko2"
                      android:layout_below="@id/tv_harga2"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:text="Pertashop"
                      android:layout_marginLeft="10sp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@android:color/black"
                      android:id="@+id/tv_rate2"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="5dp"
                      android:layout_toRightOf="@id/tv_toko2"
                      android:layout_below="@id/tv_harga2"
                      android:drawableStart="@drawable/icon_start"
                      android:drawableLeft="@drawable/icon_start"
                      android:text="4.7"
                      android:layout_marginBottom="20sp"
            />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barang3"
            android:layout_below="@id/barang1"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16sp"
            app:cardCornerRadius="8dp"
    >
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/brighgede"
                    android:id="@+id/iv_barang3"

            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_nama_barang3"
                    android:layout_below="@id/iv_barang3"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="16sp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="Bright 5,5 Kg"

            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#ff3131"
                      android:id="@+id/tv_harga3"
                      android:layout_below="@id/tv_nama_barang3"
                      android:textSize="16sp"
                      android:text="Rp 69.000"
                      android:layout_marginLeft="16sp"
            />
            <TextView android:id="@+id/tv_toko3"
                      android:layout_below="@id/tv_harga3"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:text="Pertashop"
                      android:layout_marginLeft="10sp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@android:color/black"
                      android:id="@+id/tv_rate3"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="5dp"
                      android:layout_toRightOf="@id/tv_toko3"
                      android:layout_below="@id/tv_harga3"
                      android:drawableStart="@drawable/icon_start"
                      android:drawableLeft="@drawable/icon_start"
                      android:text="4.7"
                      android:layout_marginBottom="20sp"
            />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barang4"
            android:layout_below="@id/barang2"
            android:layout_toRightOf="@id/barang3"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="28sp"
            app:cardCornerRadius="8dp"
    >
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/enduro"
                    android:id="@+id/iv_barang4"

            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_nama_barang4"
                    android:layout_below="@id/iv_barang4"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="16sp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="Enduro 4t 1lt"

            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#ff3131"
                      android:id="@+id/tv_harga4"
                      android:layout_below="@id/tv_nama_barang4"
                      android:textSize="16sp"
                      android:text="Rp 48.000"
                      android:layout_marginLeft="16sp"
            />
            <TextView android:id="@+id/tv_toko4"
                      android:layout_below="@id/tv_harga4"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:text="Pertashop"
                      android:layout_marginLeft="10sp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@android:color/black"
                      android:id="@+id/tv_rate4"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="5dp"
                      android:layout_toRightOf="@id/tv_toko4"
                      android:layout_below="@id/tv_harga4"
                      android:drawableStart="@drawable/icon_start"
                      android:drawableLeft="@drawable/icon_start"
                      android:text="4.7"
                      android:layout_marginBottom="20sp"
            />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>