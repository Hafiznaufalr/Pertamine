<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.FaqActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableStart="@drawable/ic_arrow_back"
              android:drawableLeft="@drawable/ic_arrow_back"
              android:layout_margin="10dp"
              android:id="@+id/arrow"
              android:onClick="back"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/arrow"
              android:id="@+id/tv_title"
              android:text="Pusat Bantuan"
              android:layout_marginLeft="20sp"
              android:layout_marginTop="6dp"
              android:textSize="20sp"
              android:textColor="@android:color/black"
    />
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginTop="10dp"
          android:id="@+id/divider"
          android:layout_below="@id/tv_title"
          android:background="#ecf0f1"
    />
    
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="FAQ"
              android:id="@+id/faq"
              android:layout_below="@id/divider"
              android:textSize="16sp"
              android:layout_marginLeft="16sp"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@android:color/black"
              android:layout_below="@id/faq"
              android:id="@+id/q1"
              android:text="Apa metode pembayaran dari pertamine?"
              android:layout_marginLeft="16sp"

    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/q1"
              android:id="@+id/a1"
              android:text="Kamu bisa menggunakan uang tunai dan LinkAja untuk pembayaran"
              android:layout_marginLeft="16sp"

    />
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginTop="10dp"
          android:id="@+id/divider2"
          android:layout_below="@id/a1"
          android:background="#ecf0f1"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@android:color/black"
              android:layout_below="@id/divider2"
              android:id="@+id/q2"
              android:text="Bagaimana cara membeli barang melalui Pertamine?"
              android:layout_marginLeft="16sp"

    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/q2"
              android:id="@+id/a2"
              android:text="Kamu hanya perlu klik tombol 'Belanja' yang ada di menu utama"
              android:layout_marginLeft="16sp"

    />
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginTop="10dp"
          android:id="@+id/divider3"
          android:layout_below="@id/a2"
          android:background="#ecf0f1"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@android:color/black"
              android:layout_below="@id/divider3"
              android:id="@+id/q3"
              android:text="Apa fungsi Outlet terdekat?"
              android:layout_marginLeft="16sp"

    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/q3"
              android:id="@+id/a3"
              android:text=" fungsi outlet terdekat adalah untuk mendapatkan lokasi dari outlet terdekat Pertamina"
              android:layout_marginLeft="16sp"

    />
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginTop="10dp"
          android:id="@+id/divider4"
          android:layout_below="@id/a3"
          android:background="#ecf0f1"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@android:color/black"
              android:layout_below="@id/divider4"
              android:id="@+id/q4"
              android:text="Apa fungsi Kupon?"
              android:layout_marginLeft="16sp"

    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/q4"
              android:id="@+id/a4"
              android:text="Kamu bisa mendapatkan penawaran special dengan kupon seperti diskon dan lain lain"
              android:layout_marginLeft="16sp"

    />
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginTop="10dp"
          android:id="@+id/divider5"
          android:layout_below="@id/a4"
          android:background="#ecf0f1"
    />

</RelativeLayout>