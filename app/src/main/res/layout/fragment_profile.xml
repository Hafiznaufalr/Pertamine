<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_bg"
        tools:context=".fragment.ProfileFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/top"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="250dp"
                      android:background="@drawable/bg_profil"
                      android:id="@+id/bg"
                      android:orientation="horizontal">

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img"
                app:civ_border_color="#fff"
                app:civ_border_width="2dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
        />
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:text="Arya Annurseno"
                  android:id="@+id/tv_name"
                  android:layout_below="@id/profile_image"
                  android:textColor="@android:color/white"
                  android:textSize="18sp"
                  android:layout_marginTop="15sp"
        />
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:text="08123446754"
                  android:id="@+id/tv_phone"
                  android:layout_below="@id/tv_name"
                  android:textColor="@android:color/white"
                  android:textSize="18sp"
        />



        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Email"
                  android:textColor="@android:color/black"
                  android:layout_below="@id/bg"
                  android:layout_marginLeft="16sp"
                  android:layout_marginTop="16sp"
                  android:textSize="16sp"
                  android:id="@+id/email"
        />
        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="16sp"
              android:layout_marginRight="16sp"
              android:id="@+id/divider2"
              android:layout_below="@id/email"
              android:background="#ecf0f1"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="My Vouchers"
                  android:textColor="@android:color/black"
                  android:layout_below="@id/divider2"
                  android:layout_marginLeft="16sp"
                  android:layout_marginTop="16sp"
                  android:textSize="16sp"
                  android:id="@+id/voucher"
        />
        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="16sp"
              android:layout_marginRight="16sp"
              android:id="@+id/divider3"
              android:layout_below="@id/voucher"
              android:background="#ecf0f1"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Alamat Tersimpan "
                  android:textColor="@android:color/black"
                  android:layout_below="@id/divider3"
                  android:layout_marginLeft="16sp"
                  android:layout_marginTop="16sp"
                  android:textSize="16sp"
                  android:id="@+id/alamat"
        />
        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="16sp"
              android:layout_marginRight="16sp"
              android:id="@+id/divider4"
              android:layout_below="@id/alamat"
              android:background="#ecf0f1"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Ubah Password "
                  android:textColor="@android:color/black"
                  android:layout_below="@id/divider4"
                  android:layout_marginLeft="16sp"
                  android:layout_marginTop="16sp"
                  android:textSize="16sp"
                  android:id="@+id/ubah"
        />
        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="16sp"
              android:layout_marginRight="16sp"
              android:id="@+id/divider5"
              android:layout_below="@id/ubah"
              android:background="#ecf0f1"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Keluar "
                  android:textColor="
#ff0000

"
                  android:layout_below="@id/divider5"
                  android:layout_marginLeft="16sp"
                  android:layout_marginTop="16sp"
                  android:textSize="16sp"
                  android:id="@+id/keluar"
        />
        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="16sp"
              android:layout_marginRight="16sp"
              android:id="@+id/divider6"
              android:layout_below="@id/ubah"
              android:background="#ecf0f1"
        />





    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>