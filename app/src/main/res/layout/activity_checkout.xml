<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.CheckoutActivity">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableStart="@drawable/ic_arrow_back"
              android:drawableLeft="@drawable/ic_arrow_back"
              android:layout_margin="10dp"
              android:id="@+id/arrow"
              android:onClick="back"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/arrow"
              android:id="@+id/tv_title"
              android:text="Pembayaran"
              android:layout_marginLeft="20sp"
              android:layout_marginTop="6dp"
              android:textSize="20sp"
              android:textColor="@android:color/black"
    />
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginTop="10dp"
          android:id="@+id/divider"
          android:layout_below="@id/tv_title"
          android:background="#ecf0f1"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_title"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:layout_marginLeft="16sp"
              android:layout_marginTop="16sp"
              android:text="Antar ke"
              android:id="@+id/antarke"
    />

    <ImageView android:layout_width="match_parent"
               android:layout_height="150dp"
               android:layout_below="@id/antarke"
               android:src="@drawable/c_1"
               android:id="@+id/card1"
               android:layout_marginTop="10dp"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/card1"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:layout_marginLeft="16sp"
              android:layout_marginTop="16sp"
              android:text="Metode Pembayaran"
              android:id="@+id/pembayaran"
    />
    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/pembayaran"
               android:src="@drawable/c_2"
               android:id="@+id/card2"
    />

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/card2"
               android:src="@drawable/c_3"
               android:id="@+id/card3"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/card3"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:layout_marginLeft="16sp"
              android:layout_marginTop="16sp"
              android:text="Ringkasan Belanja"
              android:id="@+id/ringkasan"
    />
    <ImageView android:layout_width="match_parent"
               android:layout_height="200dp"
               android:layout_below="@id/ringkasan"
               android:src="@drawable/c_4"
               android:layout_marginTop="10dp"
               android:id="@+id/card4"
    />

        <ImageView android:layout_width="match_parent"
                   android:layout_height="wrap_content"

                   android:layout_below="@id/card4"
                   android:src="@drawable/c_5"
                   android:id="@+id/card5"
        />

        <Button android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                android:layout_below="@id/card5"
                android:textColor="@android:color/white"
                android:text="Tambah Ke Keranjang"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:background="#ff8f89"
                android:id="@+id/btnkeranjang"

        />
        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btnkeranjang"
                android:textColor="@android:color/white"
                android:text="Beli"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:background="#fc2c8c"
                android:id="@+id/btnbeli"

        />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>