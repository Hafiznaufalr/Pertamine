<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.NearbyActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableStart="@drawable/ic_arrow_back"
              android:drawableLeft="@drawable/ic_arrow_back"
              android:layout_margin="10dp"
              android:id="@+id/arrow"
              android:onClick="back"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/arrow"
              android:id="@+id/tv_title"
              android:text="Terdekat"
              android:layout_marginLeft="20sp"
              android:layout_marginTop="6dp"
              android:textSize="20sp"
              android:textColor="@android:color/black"
    />
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginTop="10dp"
          android:id="@+id/divider"
          android:layout_below="@id/tv_title"
          android:background="#ecf0f1"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginRight="10dp"
              android:id="@+id/tv_ditemukan"
              android:textColor="#b3b3b3"
              android:layout_alignParentRight="true"
              android:textSize="16sp"
              android:text="3 Ditemukan"
              android:layout_below="@id/divider"
    />

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_ditemukan"
                    android:layout_marginTop="15dp"
                    android:id="@+id/toko1"
    >
        <ImageView android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_marginLeft="20dp"
                   android:src="@drawable/image_toko"
                   android:id="@+id/iv_toko"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_namatoko"
                  android:layout_toRightOf="@id/iv_toko"
                  android:textColor="@android:color/black"
                  android:layout_marginTop="30dp"
                  android:layout_marginLeft="10dp"
                  android:textSize="16sp"
                  android:text="SPBU Pertamina Cikini"
        />
       <TextView android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@android:color/black"
                 android:id="@+id/tv_rate"
                 android:layout_marginLeft="10dp"
                 android:layout_toRightOf="@id/iv_toko"
                 android:layout_below="@id/tv_namatoko"
                 android:drawableStart="@drawable/icon_start"
                 android:drawableLeft="@drawable/icon_start"
                 android:text="4.7"
       />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_distance"
                  android:layout_toRightOf="@id/tv_rate"
                  android:layout_below="@id/tv_namatoko"
                  android:text="0.7 km"
                  android:textColor="@android:color/black"
                  android:layout_marginLeft="10dp"
        />
        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="16sp"
              android:layout_marginRight="16sp"
              android:id="@+id/divider2"
              android:layout_below="@id/iv_toko"
              android:background="#ecf0f1"
        />

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toko1"
                    android:layout_marginTop="15dp"
                    android:id="@+id/toko2"
    >
        <ImageView android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_marginLeft="20dp"
                   android:src="@drawable/image_toko"
                   android:id="@+id/iv_toko2"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_namatoko2"
                  android:layout_toRightOf="@id/iv_toko2"
                  android:textColor="@android:color/black"
                  android:layout_marginTop="30dp"
                  android:layout_marginLeft="10dp"
                  android:textSize="16sp"
                  android:text="Nama Toko"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/black"
                  android:id="@+id/tv_rate2"
                  android:layout_marginLeft="10dp"
                  android:layout_toRightOf="@id/iv_toko2"
                  android:layout_below="@id/tv_namatoko2"
                  android:drawableStart="@drawable/icon_start"
                  android:drawableLeft="@drawable/icon_start"
                  android:text="4.7"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_distance2"
                  android:layout_toRightOf="@id/tv_rate2"
                  android:layout_below="@id/tv_namatoko2"
                  android:text="0.7 km"
                  android:textColor="@android:color/black"
                  android:layout_marginLeft="10dp"
        />
        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="16sp"
              android:layout_marginRight="16sp"
              android:id="@+id/divider3"
              android:layout_below="@id/iv_toko2"
              android:background="#ecf0f1"
        />

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toko2"
                    android:layout_marginTop="15dp"
                    android:id="@+id/toko3"
    >
        <ImageView android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_marginLeft="20dp"
                   android:src="@drawable/image_toko"
                   android:id="@+id/iv_toko3"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_namatoko3"
                  android:layout_toRightOf="@id/iv_toko3"
                  android:textColor="@android:color/black"
                  android:layout_marginTop="30dp"
                  android:layout_marginLeft="10dp"
                  android:textSize="16sp"
                  android:text="Nama Toko"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/black"
                  android:id="@+id/tv_rate3"
                  android:layout_marginLeft="10dp"
                  android:layout_toRightOf="@id/iv_toko3"
                  android:layout_below="@id/tv_namatoko3"
                  android:drawableStart="@drawable/icon_start"
                  android:drawableLeft="@drawable/icon_start"
                  android:text="4.7"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_distance3"
                  android:layout_toRightOf="@id/tv_rate3"
                  android:layout_below="@id/tv_namatoko3"
                  android:text="0.7 km"
                  android:textColor="@android:color/black"
                  android:layout_marginLeft="10dp"
        />
        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="16sp"
              android:layout_marginRight="16sp"
              android:id="@+id/divider4"
              android:layout_below="@id/iv_toko3"
              android:background="#ecf0f1"
        />

    </RelativeLayout>

</RelativeLayout>